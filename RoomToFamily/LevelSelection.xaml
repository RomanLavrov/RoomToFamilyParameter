<UserControl
    x:Class="RoomToFamily.LevelSelection"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RoomToFamily"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <ScrollViewer>
        <Grid>
            <Grid
                Name="Grid"
                Width="265"
                Height="195"
                Margin="25,60,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top" />
            <Label
                Width="280"
                Margin="10,10,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Select floor to analyse:"
                FontSize="16" />
            <Button
                Width="75"
                Margin="120,270,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="Button_Click"
                Content="OK" />

        </Grid>
    </ScrollViewer>
</UserControl>
